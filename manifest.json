{
    "manifest_version": 3,
    "name": "v0 Theme Switcher",
    "version": "1.0",
    "description": "Switch between light and dark themes for v0.dev",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["https://v0.dev/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "icons": {
      "128": "icon.png"
    }
  }